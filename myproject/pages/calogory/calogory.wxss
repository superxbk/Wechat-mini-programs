.main{
  width: 100%;
  height: 100vh;
  display: flex;
}
/* 左侧 */
.left{
  width: 25%;
  display: flex;
  flex-direction: column;
  border-right: 1px solid #dcdcdc;
  text-align: center;
  /* background:yellow; */
}

.category-name{
  display: inline-block;
  margin-top: 40rpx;
  font-size :17px;
}
.category-name.on{
  /* display: inline-block; */
  margin-top: 40rpx;
  font-size :20px;
  color:green
}

/* 右侧 */
.right{
  display:flex;
  flex-direction: column;
}
.content{
  margin-top: 40px;
}
.category-list{
  margin-top: 40px;
  height:100vh
}
.category-list:nth-child(1){
  margin-top: 0px;

}
.category-list .header{
  height: 90rpx;
  line-height: 90rpx;
  font-size: 30px;
  text-align: center;
  /* background: chartreuse; */
}
.goods-list{
  display: flex;
  flex-wrap: wrap;
  /* border: 1rpx solid black; */
}
.goods-list-item{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100rpx;
  /* height: 150rpx; */

  margin: 14rpx 26rpx;
  /* border: 1rpx solid black; */
  /* background-color: gray; */
}
.goods-list-item image{
  display: inline-block;
  width: 100%;
  height: 70vh;
  background: gray;
  border-radius: 50%;
}
.goods-list-item text{
  display: inline-block;
  font-size: 24rpx;
  margin-top: 16rpx;
}