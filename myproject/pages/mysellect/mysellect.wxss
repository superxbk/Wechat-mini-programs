/* pages/mysellect/mysellect.wxss */
.container{
  width: 100%;
  height: 100vh;
}
/* 头部 */
.tab{
  display: flex;
  height: 70rpx;
  justify-content: space-around;
  align-items: center;
  background-color: white;
}
.tab_item{
  width: 200rpx;
  height: 100%;
  font-size: 15px;
  display: flex;
  justify-content: center;

}
.tab_item:active{
  width: 200rpx;
  height: 100%;
  font-size: 20px;
  color:green;
  display: flex;
  justify-content: center;
}

.h2{
  font-size: 40rpx;
  font-weight: 50rxp;
  margin: 20rpx;
  color: green;
}

.article{
  font-family: Georgia, 'Times New Roman', Times, serif;
  line-height: 50rpx;
  text-indent: 50rpx;
  font-size: 35rpx;
  box-shadow: 1rpx 1rpx 5rpx 0 green;
  margin: 20rpx;
}

.content_item text{
  font-family: Georgia, 'Times New Roman', Times, serif;
  line-height: 50rpx;
  text-indent: 50rpx;
  font-size: 35rpx;
  margin: 20rpx;
}


